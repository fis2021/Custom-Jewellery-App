<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<GridPane styleClass="background" id="addProductFile" alignment="center" hgap="20" prefHeight="600" prefWidth="800" vgap="20" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.cja.controllers.AddProductController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label text="Nume:" styleClass="title" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <font>
            <Font size="30.0" />
        </font></Label>

    <TextField fx:id="name" id="name" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <font>
            <Font size="20.0" />
        </font></TextField>

    <Label text="Pret:" styleClass="title" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <font>
            <Font size="30.0" />
        </font></Label>

    <TextField fx:id="price" id="price" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <font>
            <Font size="20.0" />
        </font></TextField>


    <Label text="Tip:" styleClass="title" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <font>
            <Font size="30.0" />
        </font></Label>

    <ChoiceBox fx:id="type" id="type" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
    </ChoiceBox>

    <Text fx:id="addMessage" id="addMessage" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="4">
        <Button id="cancelButton" styleClass="medium_button" onAction="#handleCancelButtonAction" text="Anulare">
            <font>
                <Font size="20.0" />
            </font></Button>
    </HBox>

    <stylesheets>
        <URL value="@../css/managerStyle.css" />
    </stylesheets>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button id="addButton" styleClass="medium_button" onAction="#handleAddButtonAction" text="Adaugare">
            <font>
                <Font size="20.0" />
            </font></Button>
    </HBox>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
