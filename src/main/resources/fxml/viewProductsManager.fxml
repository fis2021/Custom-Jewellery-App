<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.ViewProductsManagerController">
   <Button onAction="#handleBackButtonAction" mnemonicParsing="false" text="Inapoi">
      <VBox.margin>
         <Insets left="15.0" top="15.0" />
      </VBox.margin>
   </Button>
    <AnchorPane>
        <children>
            <BorderPane prefHeight="480.0" prefWidth="400.0">
                <center>
                    <TableView fx:id="typeTable" prefHeight="550.0" prefWidth="330.0" BorderPane.alignment="BOTTOM_LEFT">
                        <columns>
                            <TableColumn fx:id="productTypeColumn" prefWidth="165.0" text="Tip" />
                            <TableColumn fx:id="productPriceColumn" prefWidth="165.0" text="Pret" />
                        </columns>
                    </TableView>
                </center>
                <padding>
                    <Insets bottom="50.0" left="50.0" right="20.0" top="30.0" />
                </padding>
                <top>
                    <Label alignment="CENTER" prefHeight="5.0" prefWidth="260.0" text="Tipuri produse" BorderPane.alignment="CENTER">
                        <font>
                            <Font size="20.0" />
                        </font>
                    </Label>
                </top>
            </BorderPane>
            <BorderPane layoutX="400.0" prefHeight="480.0" prefWidth="400.0">
                <center>
                    <TableView fx:id="materialTable" prefHeight="550.0" prefWidth="330.0" BorderPane.alignment="BOTTOM_LEFT">
                        <columns>
                            <TableColumn fx:id="materialNameColumn" prefWidth="165.0" text="Nume" />
                            <TableColumn fx:id="materialPriceColumn" prefWidth="165.0" text="Pret" />
                        </columns>
                    </TableView>
                </center>
                <padding>
                    <Insets bottom="50.0" left="20.0" right="50.0" top="30.0" />
                </padding>
                <top>
                    <Label alignment="CENTER" prefHeight="5.0" prefWidth="260.0" text="Materiale" BorderPane.alignment="CENTER">
                        <font>
                            <Font size="20.0" />
                        </font></Label>
                </top>
            </BorderPane>
        </children>
    </AnchorPane>
    <HBox alignment="TOP_CENTER" prefHeight="120.0" prefWidth="800.0" style="-fx-spacing: 50;">
        <Button mnemonicParsing="false" onAction="#handleAddButtonAction" prefWidth="150.0" text="Adaugare">
            <font>
                <Font size="12.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleDeleteTypeButtonAction" prefWidth="150.0" text="Eliminare tip">
            <font>
                <Font size="12.0" />
            </font>
        </Button>
        <Button layoutX="335.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleDeleteMaterialButtonAction" prefWidth="150.0" text="Eliminare material">
            <font>
                <Font size="12.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleModifyPriceButtonAction" prefWidth="150.0" text="Modificare pret">
            <font>
                <Font size="12.0" />
            </font>
        </Button>
    </HBox>
</VBox>
