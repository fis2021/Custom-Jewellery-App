<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<VBox styleClass="register" id="registerFile" prefWidth="800" prefHeight="600" alignment="center" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.RegistrationController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <Text styleClass="title" text="Registration">
        <font>
            <Font size="40.0" />
        </font></Text>

    <VBox spacing="40">
        <padding>
            <Insets top="50"/>
        </padding>
        <HBox alignment="CENTER">
            <TextField promptText="Username" id="username" fx:id="usernameField"/>
        </HBox>
        <HBox alignment="CENTER">
            <PasswordField promptText="Password" id="password" fx:id="passwordField"/>
        </HBox>
    </VBox>

    <HBox alignment="CENTER" spacing="70">
        <padding>
            <Insets top="40"/>
        </padding>
        <Text fx:id="roleText" text="Role:"/>
        <ChoiceBox fx:id="role" id="role" prefWidth="150.0"/>
    </HBox>

    <HBox alignment="CENTER" spacing="130">
        <padding>
            <Insets top="50"/>
        </padding>
        <Button onAction="#handleBackAction" id="backToLogin" text="Go back" />
        <Button onAction="#handleRegisterAction" id="register" text="Register" />
    </HBox>

    <VBox alignment="CENTER">
        <padding>
            <Insets top="30"/>
        </padding>
        <Text fx:id="registrationMessage" id="registrationMessage"/>
    </VBox>

    <stylesheets>
        <URL value="@../css/loginStyle.css" />
    </stylesheets>
</VBox>
